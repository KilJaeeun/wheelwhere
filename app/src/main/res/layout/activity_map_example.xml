<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/mapLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-450dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="➕"></Button>

        <Button
            android:id="@+id/buttonZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="➖"></Button>

        <Button
            android:id="@+id/btnMyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:text="내 위치" />

        <Button
            android:id="@+id/btnMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:text="example">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_card"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-45dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:paddingLeft="26dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp">

            <TextView

                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="22sp"
                android:lineSpacingExtra="-0.42sp"
                android:text="오어사"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="23dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/star0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="22dp"
            android:paddingBottom="6sp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/location_image" />

            <TextView
                android:id="@+id/item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineHeight="14sp"
                android:lineSpacingExtra="-0.25sp"
                android:paddingLeft="10dp"
                android:text="경북 포항시 남구 오천읍 항사리 산28-14"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="23sp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/location_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineHeight="14sp"
                android:lineSpacingExtra="-0.25sp"
                android:paddingLeft="10dp"
                android:text="010-4586-2242"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="@drawable/item_rectangle"
                android:gravity="center"
                android:text="장애인 화장실"
                android:textSize="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/item_rectangle"
                android:gravity="center"
                android:text="주차장"
                android:textSize="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2.5"
                android:background="@drawable/item_rectangle"
                android:gravity="center"
                android:text="엘리베이터"
                android:textSize="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/item_rectangle"
                android:gravity="center"
                android:text="도우미"
                android:textSize="10dp" />

        </LinearLayout>


    </LinearLayout>


    <!-- start of navibar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_map_of_map"
            android:layout_width="24.41dp"
            android:layout_height="25.1dp"
            android:layout_marginLeft="85dp"
            android:src="@drawable/ic_map_sel" />

        <ImageView
            android:id="@+id/btn_list_of_map"
            android:layout_width="16.67dp"
            android:layout_height="24.86dp"
            android:layout_marginLeft="85dp"
            android:src="@drawable/ic_loc_non_sel" />

        <ImageView
            android:id="@+id/btn_my_of_map"
            android:layout_width="24.12dp"
            android:layout_height="24.13dp"
            android:layout_marginLeft="95dp"
            android:src="@drawable/ic_my_non_sel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="-18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="지도"
            android:textColor="#000000"
            android:textSize="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="장소 리스트"
            android:textColor="#8F8F8F"
            android:textSize="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="마이페이지"
            android:textColor="#8F8F8F"
            android:textSize="8dp" />

    </LinearLayout>
    <!-- end of navi-bar -->


</LinearLayout>