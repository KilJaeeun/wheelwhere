<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineHeight="22dp"
            android:lineSpacingExtra="-0.42dp"
            android:text="내 정보"
            android:textColor="#000000"
            android:textSize="17dp"

            ></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greytext"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_gravity="center"
            android:layout_marginTop="94dp"
            android:src="@drawable/big_grey"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:lineHeight="24dp"
            android:lineSpacingExtra="-0.54dp"
            android:text="예동이"
            android:textColor="#000000"
            android:textSize="18dp"></TextView>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="35.19dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_addplace"
                android:drawableLeft="@drawable/icn_plus"
                android:drawablePadding="-44.1dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:text="장소 추가"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="35.19dp"
            android:layout_gravity="center"
            android:layout_marginTop="7.8dp"
            android:layout_marginBottom="143.8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/my_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_addplace"
                android:drawableLeft="@drawable/icn_pencil"
                android:drawablePadding="-43.2dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:text="나의 작성글"></Button>
        </LinearLayout>
    </LinearLayout>

    <!-- start of navibar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="-61dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_map_of_my"
            android:layout_width="24.41dp"
            android:layout_height="25.1dp"
            android:layout_marginLeft="85dp"
            android:src="@drawable/ic_map_non_sel" />

        <ImageView
            android:id="@+id/btn_list_of_my"
            android:layout_width="16.67dp"
            android:layout_height="24.86dp"
            android:layout_marginLeft="85dp"
            android:src="@drawable/ic_loc_non_sel" />

        <ImageView
            android:id="@+id/btn_my_of_my"
            android:layout_width="24.12dp"
            android:layout_height="24.13dp"
            android:layout_marginLeft="95dp"
            android:src="@drawable/ic_my_sel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="지도"
            android:textColor="#8F8F8F"
            android:textSize="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="장소 리스트"
            android:textColor="#8F8F8F"
            android:textSize="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="마이페이지"
            android:textColor="#000000"
            android:textSize="8dp" />

    </LinearLayout>
    <!-- end of navi-bar -->

</LinearLayout>