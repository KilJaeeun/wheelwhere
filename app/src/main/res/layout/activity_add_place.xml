<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPlace">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52.99dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_of_add"
            android:layout_width="7.76dp"
            android:layout_height="13.14dp"
            android:layout_marginLeft="28.32dp"
            android:layout_marginTop="20.37dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="141.24dp"
            android:layout_marginTop="18.92dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:text="장소 추가"
            android:textColor="#000000"
            android:textSize="17dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="255.68dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="101.93dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/notosanscjkkr_light"

            android:text="이름"
            android:textColor="#8F8F8F"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/new_name_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="-10dp"
            android:bufferType="normal"
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:layout_width="255.68dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-9dp"
        android:background="#8F8F8F" />

    <LinearLayout
        android:layout_width="255.68dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30.96dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/notosanscjkkr_light"
            android:text="위치"
            android:textColor="#8F8F8F"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/new_address_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="-10dp"
            android:bufferType="normal"
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:layout_width="255.68dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-9dp"
        android:background="#8F8F8F" />

    <LinearLayout
        android:layout_width="255.68dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30.96dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/notosanscjkkr_light"
            android:text="연락처"
            android:textColor="#8F8F8F"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/new_number_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="-10dp"
            android:bufferType="normal"
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:layout_width="255.68dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-9dp"
        android:background="#8F8F8F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="77.5dp"
        android:layout_marginTop="30.96dp"
        android:fontFamily="@font/notosanscjkkr_light"
        android:text="시설 여부"
        android:textSize="12dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="-1dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="77.34dp"
            android:layout_height="23.04dp"
            android:layout_marginTop="3.08dp"
            android:background="@drawable/btn_loo">

            <Button
                android:id="@+id/isRest_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:text="장애인 화장실"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50.44dp"
            android:layout_height="23.04dp"
            android:layout_marginLeft="3.66dp"
            android:layout_marginTop="3.08dp"
            android:background="@drawable/btn_pl">

            <Button
                android:id="@+id/isPark_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:text="주차장"
                android:textSize="11dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="67.56dp"
            android:layout_height="23.04dp"
            android:layout_marginLeft="4.56dp"
            android:layout_marginTop="3.08dp"
            android:background="@drawable/btn_elv">

            <Button
                android:id="@+id/isEle_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:text="엘리베이터"
                android:textSize="11dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="50.44dp"
            android:layout_height="23.04dp"
            android:layout_marginLeft="8.44dp"
            android:layout_marginTop="3.08dp"
            android:background="@drawable/btn_helper">

            <Button
                android:id="@+id/isHelper_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:text="도우미"
                android:textSize="11dp" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/submit_add"
        android:layout_width="80.57dp"
        android:layout_height="34.46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68.96dp"
        android:background="@drawable/btn_sbm"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:text="완료"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />


</LinearLayout>