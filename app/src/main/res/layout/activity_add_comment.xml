<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddComment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center"
        android:lineHeight="22sp"
        android:lineSpacingExtra="-0.42sp"
        android:text="후기 작성"
        android:textColor="#000000"
        android:textSize="17sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greytext"

        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/greytext"

        ></LinearLayout>

    <EditText
        android:id="@+id/recieve_comment"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:hint="후기를 입력해주세요."
        android:padding="10dp"
        android:textColorHint="@color/greytext"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greytext"

        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingLeft="115dp"
        android:paddingRight="115dp"

        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greytext"

        ></LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/recieve_comment_btn"
        android:layout_width="81dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="34dp"
        android:textColor="@color/white"

        android:background="@drawable/black_btn_radius"
        android:text="완료"
        android:textSize="16sp"></Button>
</LinearLayout>