<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:paddingLeft="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp"
            >

            <TextView

                android:id="@+id/bubble_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="22sp"
                android:lineSpacingExtra="-0.42sp"
                android:text="오어사"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="23dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/star0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="22dp"
            android:paddingBottom="6sp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/location_image" />

            <TextView
                android:id="@+id/bubble_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineHeight="14sp"
                android:lineSpacingExtra="-0.25sp"
                android:paddingLeft="10dp"
                android:text="경북 포항시 남구 오천읍 항사리 산28-14"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="23sp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/location_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineHeight="14sp"
                android:lineSpacingExtra="-0.25sp"
                android:paddingLeft="10dp"
                android:text="010-4586-2242"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="@drawable/item_rectangle"
                android:gravity="center"
                android:text="장애인 화장실"
                android:textSize="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/item_rectangle"
                android:gravity="center"
                android:text="주차장"
                android:textSize="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2.5"
                android:background="@drawable/item_rectangle"
                android:gravity="center"
                android:text="엘리베이터"
                android:textSize="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/item_rectangle"
                android:gravity="center"
                android:text="도우미"
                android:textSize="10dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>