<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="302dp"
    android:layout_height="170dp"
    android:background="@drawable/border"
    android:elevation="122dp"
    android:orientation="vertical"
    android:paddingLeft="26dp"
    android:paddingTop="21dp"
    android:paddingRight="26dp"
    android:paddingBottom="23dp"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="22dp"
            android:lineSpacingExtra="-0.42dp"
            android:text="오어사"
            android:textSize="17dp"

            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="23dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
<!--<ImageView-->
<!--    android:layout_width="9dp"-->
<!--    android:layout_height="14dp"-->
<!--&lt;!&ndash;    android:src="@drawable/"&ndash;&gt;-->
<!--    ></ImageView>-->

            <TextView
                android:id="@+id/location_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="14dp"
                android:lineSpacingExtra="-0.25dp"
                android:text="경북 포항시 남구 오천읍 항사리 산28-14"
                android:textColor="@color/greytext"
                android:textSize="10dp"

                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="14dp"
                android:lineSpacingExtra="-0.25dp"
                android:text="010-4586-2242"
                android:textColor="@color/greytext"

                android:textSize="10dp"

                ></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="72.6sp"
            android:layout_height="21.63dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:text="장애인 화장실"
            android:layout_marginRight="2dp"
            android:textSize="10dp"></TextView>
        <TextView
            android:layout_width="47sp"
            android:layout_height="21.63dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:text="주차장"
            android:layout_marginRight="2dp"
            android:textSize="10dp"></TextView>
        <TextView
            android:layout_width="63sp"
            android:layout_height="21.63dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:text="엘리베이터"
            android:layout_marginRight="2dp"
            android:textSize="10dp"></TextView>
        <TextView
            android:layout_width="47sp"
            android:layout_height="21.63dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:text="도우미"
            android:layout_marginRight="2dp"
            android:textSize="10dp"></TextView>

    </LinearLayout>
</LinearLayout>